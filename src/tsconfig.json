{
    "compilerOptions": {
      "target": "es2020",
      "module": "esnext",
      "lib": ["es2020"],
      "allowJs": true,
      "outDir": "dist",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["node"],
      "moduleResolution": "node",
    },

    "exclude": [
      "./generated",
      "./dist"
    ]
  }
  